<h1>People</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td>
          <%= link_to 'Show', person, class: 'btn btn-light btn-sm' %>
          <%= link_to 'Edit', edit_person_path(person), class: 'btn btn-light btn-sm' %>
          <%= link_to 'Destroy', person, class: 'btn btn-light btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path, class: 'btn btn-primary' %>
